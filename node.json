{
  "extends": "./defaults.json",
  "plugins": [
    "node"
  ],
  "env": {
    "mocha": true,
    "node": true
  },
  "rules": {
    "callback-return": 2,
    "global-require": 2,
    "handle-callback-err": 2,
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-exit": 2,
    "strict": [2, "global"],

    "node/no-deprecated-api": 2,
    "node/no-unsupported-features": [2, {
      "version": 4
    }]
  }
}
